<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/old_lace"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Logo or Header -->

        <!-- Title of the Page -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="App Logo"
            android:src="@drawable/acticsr" />

        <TextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textColor="@color/dark_violet"
            android:layout_marginTop="16dp" />

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to our Event Manager and Activity Tracker App! This app helps you organize events and track activities efficiently. Whether you're planning a conference, workshop, or any activity, this app simplifies event management and keeps you on track."
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="24dp"/>

        <!-- Team Section Title -->
        <TextView
            android:id="@+id/teamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Development Team"
            android:textSize="20sp"
            android:textColor="@color/dark_violet"
            android:layout_marginTop="32dp" />

        <!-- Team Members List -->
        <TextView
            android:id="@+id/teamMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sayan - Lead Developer\nJohn Doe - UI/UX Designer\nJane Smith - Backend Developer"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginTop="8dp"/>

        <!-- Contact Section Title -->
        <TextView
            android:id="@+id/contactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="20sp"
            android:textColor="@color/deep_pink"
            android:layout_marginTop="32dp" />

        <!-- Contact Information -->
        <TextView
            android:id="@+id/contactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: support@eventtrackerapp.com\nPhone: +123 456 7890"
            android:textSize="16sp"
            android:textColor="@color/dim_gray"
            android:layout_marginTop="8dp"/>

        <!-- Social Media Links Section -->
        <TextView
            android:id="@+id/socialMediaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Us"
            android:textSize="20sp"
            android:textColor="@color/deep_pink"
            android:layout_marginTop="32dp" />

        <!-- Social Media Links -->
        <TextView
            android:id="@+id/socialLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook: /eventtracker\nTwitter: @eventtracker\nInstagram: @event_tracker"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
