<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo at the top -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actiCSR"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo" />

        <!-- Main heading -->
        <TextView
            android:id="@+id/mainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to actiCSR!"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Mission Statement -->
        <TextView
            android:id="@+id/missionStatement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our mission is to foster a collaborative environment where every student can actively contribute to CSR events."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Key Features Heading -->
        <TextView
            android:id="@+id/keyFeaturesHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features of actiCSR:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Key Features List -->
        <TextView
            android:id="@+id/keyFeaturesDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Event Management: Organize all college events with ease.\n- Participant Tracking: Keep detailed records of every studentâ€™s contributions.\n- Activity Records: View past event history and performance insights.\n- Real-time Notifications: Stay updated with event schedules and reminders.\n- Collaboration Tools: Ensure smooth communication and coordination between organizers."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"/>

        <!-- Call to Action -->
        <TextView
            android:id="@+id/getInvolvedHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Involved with actiCSR!"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/getInvolvedDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to take part in college events and make a difference? Join actiCSR today and stay connected with every CSR initiative on campus!"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Publish Button -->
        <Button
            android:id="@+id/publishEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join actiCSR Now!"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>