<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />

        <!-- Event Title and Coordinator -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International Band Music Concert"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/eventCoordinator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Co-ordinate by Rati Ranjan Mishra"
            android:textSize="14sp"
            android:textColor="#607D8B"
            android:layout_marginTop="4dp" />

        <!-- Date and Time Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_calendar"
                app:tint="#5872FF"/>

            <TextView
                android:id="@+id/eventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="14 November, 2024\nTuesday, 4:00PM - 9:00PM"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_location"
                app:tint="#5872FF"/>

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="ARYABHATA\nAuditorium, Hall Noâ€“06"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- About Event Section -->
        <TextView
            android:id="@+id/aboutEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Event"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/aboutEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It's not just a concert but a cultural exchange, where music becomes a universal language, uniting people across borders..."
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:padding="12dp"
            android:textAllCaps="true"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
