<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a detailed description of the event. Here you can add more information about the event."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: TBD"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: TBD"
            android:textSize="16sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/buttonMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
